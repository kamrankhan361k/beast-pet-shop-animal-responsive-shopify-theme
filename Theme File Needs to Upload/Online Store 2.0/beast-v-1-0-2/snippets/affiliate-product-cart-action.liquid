{% assign affiliate_link_first = product.description | split:'[/affiliate_link]' | first %}
{% assign affiliate_link_final = affiliate_link_first | split:'[affiliate_link]' | last %}

<div class="pro-details-cart pro-details-aff-cart btn-hover">
  {% if product.available %}
  <a href="{{ affiliate_link_final }}" class="cart-text">{{ settings.affiliate_cart_button_title }}</a>
  {% else %}
  <a href="{{ affiliate_link_final }}" class="cart-disable cart-text">{{ settings.soldout_button_title }}</a>
  {% endif %}
</div>