{%- assign sset = section.settings -%}
{%- assign header_font_top = sset.header_font_top -%}
{%- assign header_font_slider = sset.header_font_slider -%}
{%- assign paragraph_font_slider = sset.paragraph_font_slider -%}
{%- assign button_font_slider = sset.button_font_slider -%}



<div id="section-{{ section.id }}" class="slider-area slider-special-banner {% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}default {% endif %} slider_style_1" id="section-{{ section.id }}" data-section="heroOwlSlider">
   
  {% if section.settings.slider_arsoule_active %} 
  
  <div class="slider-active-special owl-carousel nav-style-{% if sset.nav_style == 'style_1' %}1{% elsif sset.nav_style == 'style_3' %}3{% else %}2 dot-style-1{% endif %}" data-owl-carousel='{

            "loop": true,
            "nav": true,
            {% if settings.rtl_enable %}
            "rtl": true,
            {% endif %}
            "autoplay": false,
            {% if section.settings.nav_style == 'style_1' %}
            "navText": ["<i class=&#x27;sli sli-arrow-left&#x27;></i>", "<i class=&#x27;sli sli-arrow-right&#x27;></i>"],
            {% elsif section.settings.nav_style == 'style_2' %}
            "navText": ["<i class=&#x27;sli sli-arrow-up&#x27;></i>", "<i class=&#x27;sli sli-arrow-down&#x27;></i>"],
            {% elsif section.settings.nav_style == 'style_3' %}
            "navText": ["<i class=&#x27;sli sli-arrow-up&#x27;></i><span>Prev</span>", "<i class=&#x27;sli sli-arrow-down&#x27;></i><span>Next</span>"],
            {% endif %}
            "autoplayTimeout": 5000,
            "animateOut": "fadeOut",
            "animateIn": "fadeIn",
            "item": 1,
            "responsive": {
              "0": {
                "items": 1
              },
              "768": {
                "items": 1
              },
              "1000": {
                "items": 1
              }
            }}'>     
     
     {% else %}
     
     	<div class="slider-special-class">    
     
     {% endif%}
     
     
     
     {%- for block in section.blocks -%}{%- assign bset = block.settings -%}
    <div class="class-{{block.id}} single-slider d-flex align-items-center" style="background-color:{{ sset.sec_bg_color }};height:{{ sset.p_top }}px;
        	{%- if block.settings.slider_bg_img -%}background-image: url('{{ block.settings.slider_bg_img | img_url: 'master' }}'){% endif %}">
      <div class="container">
        <div class="row {% if block.settings.content_position == 'center' %} content_center {% elsif block.settings.content_position == 'right' %}content_right {% else %} content_left {% endif %}">
          
          <div class="col-md-12 col-sm-12 col-12">
            <div class="slider-content slider-animated-1 text-{% if bset.content_align == 'center' %}center{% elsif bset.content_align == 'right' %}right{% else %}left{% endif %}">
              
              
              {%- if bset.title_top != '' -%}
              <h3 class="animated">{{ bset.title_top }}</h3>
              {%- endif -%}
              
              
              {%- if bset.title1 != '' -%}
              <h1 class="animated">{{ bset.title1 }}</h1>
              {%- endif -%}

              {%- if bset.description != '' -%}
              <p class="animated">{{ bset.description }}</p>
              {%- endif -%}

              {%- if bset.btn != '' -%}
              <div class="slider-btn btn-hover">
                <a class="animated" href="{{ bset.btn_url }}">
                  {{ bset.btn }} {% if bset.show_icon %} <i style="font-size:{{ sset.btn_font_size }}px;" class="sli sli-basket-loaded"></i>{% endif %}
                </a>
              </div>
              {%- endif -%}
            </div>
          </div>
          
        </div>
      </div>
      

      <style>

        #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 h3 {
          -webkit-animation-name: {{block.settings.content_animation}};
          animation-name: {{block.settings.content_animation}};
        }
        #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 h1 {
          -webkit-animation-name: {{block.settings.content_animation}};
          animation-name: {{block.settings.content_animation}};
        }
        #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 p {
          -webkit-animation-name: {{block.settings.content_animation}};
          animation-name: {{block.settings.content_animation}};
        }
        #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 a {
          -webkit-animation-name: {{block.settings.content_animation}};
          animation-name: {{block.settings.content_animation}};
        }
      </style>
      
      
      
    </div>
    {%- endfor -%}
  </div>
</div>






{%- if sset.slider_content_custom_style -%}
<style>
  {{ header_font_top | font_face }}
  {{ header_font_slider | font_face }}
  {{ paragraph_font_slider | font_face }}
  {{ button_font_slider | font_face }}

  #section-{{ section.id }}.slider-area .single-slider .slider-content h3 {
    font-family: {{ header_font_top.family }}, {{ header_font_top.fallback_families }};
    font-style: {{ header_font_top.style }};
    font-weight: {{ header_font_top.weight }};
    color:{{ sset.header_top_color }};
    font-size:{{ sset.header_font_top_size }}px;
    line-height: {{sset.header_font_top_line_height}}px;
    margin-bottom: {{section.settings.header_font_top_margin_bottom}}px;
  }

  #section-{{ section.id }}.slider-area .single-slider .slider-content h1 {
    font-family: {{ header_font_slider.family }}, {{ header_font_slider.fallback_families }};
    font-style: {{ header_font_slider.style }};
    font-weight: {{ header_font_slider.weight }};
    color:{{ sset.title1_color }};
    font-size:{{ sset.title1_font_size }}px;
    line-height: {{sset.heading_line_height}}px;
    margin-bottom: {{section.settings.title_margin_bottom}}px;
  }
  #section-{{ section.id }}.slider-area .single-slider .slider-content p {
    font-family: {{ paragraph_font_slider.family }}, {{ paragraph_font_slider.fallback_families }};
    font-style: {{ paragraph_font_slider.style }};
    font-weight: {{ paragraph_font_slider.weight }};
    color:{{ sset.description_color }};
    font-size:{{ sset.description_font_size }};
    line-height: {{sset.des_line_height}}px;
    margin:0 0 {{section.settings.des_margin_bottom}}px;
  }
  #section-{{ section.id }}.slider-area .single-slider .slider-content .slider-btn a {
    background-color: {{ sset.btn_bg_color }};
    color: {{ sset.btn_color }};
    border: 2px solid {{ sset.btn_border_color }};
    border-radius: {{ sset.btn_border_radius }}px;
    text-transform: unset;
    font-size:{{ sset.btn_font_size }}px;
    font-family: {{ button_font_slider.family }}, {{ button_font_slider.fallback_families }};
    font-style: {{ button_font_slider.style }};
    font-weight: {{ button_font_slider.weight }};
  }
    #section-{{ section.id }}.slider-area .single-slider .slider-content .slider-btn {
    margin-top: {{section.settings.button_margin_top}}px;
  }
  
  #section-{{ section.id }}.slider-area .single-slider .slider-content .slider-btn a i {
    color: {{ sset.btn_color }};
  }
  #section-{{ section.id }}.slider-area .single-slider .slider-content .slider-btn a:hover {
    background-color: {{ sset.btn_hover_bg_color }};
    color: {{ sset.btn_hover_color }};
    border: 2px solid {{ sset.btn_hover_border_color }};
  }
    #section-{{ section.id }}.slider-area .single-slider .slider-content .slider-btn a:hover i {
    color: {{ sset.btn_hover_color }};
  }
  #section-{{ section.id }}.slider-area .nav-style-1.owl-carousel .owl-nav div, 
  #section-{{ section.id }}.slider-area .nav-style-2 .owl-nav div, 
  #section-{{ section.id }}.slider-area .nav-style-3 .owl-nav div {
    color: {{ sset.controlnav_color }};
    background-color: {{ sset.controlnav_bg_color }};
    border: 1px solid {{ sset.controlnav_border_color }};
  }
  #section-{{ section.id }}.slider-area .nav-style-1.owl-carousel .owl-nav div:hover, 
  #section-{{ section.id }}.slider-area .nav-style-2 .owl-nav div:hover, 
  #section-{{ section.id }}.slider-area .nav-style-3 .owl-nav div:hover {
    color: {{ sset.hover_controlnav_color }};
    background-color: {{ sset.hover_controlnav_bg_color }};
    border: 1px solid {{ sset.hover_controlnav_border_color }};
  }

  #section-{{ section.id }}.slider-special-banner .slider-content {
    background: {{ section.settings.content_bg_color }};
    max-width: {{ section.settings.special_bg_width }}%;
    box-shadow: 0 0 0 21px {{ section.settings.content_shadow_color }};
  }


</style>

{%endif%}



