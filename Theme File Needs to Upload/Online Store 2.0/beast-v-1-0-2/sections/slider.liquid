<div class="slider-area {% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}default {% endif %} slider_style_1" id="section-{{ section.id }}" data-section="heroOwlSlider">
   
  <div class="slider-active-boxed owl-carousel dot-style-1 {{section.settings.dot_style}} nav-style-{% if section.settings.nav_style == 'style_1' %}1{% elsif section.settings.nav_style == 'style_3' %}3{% elsif section.settings.nav_style == 'style_4' %}2 nav_2_left{% else %}2{% endif %}" data-owl-carousel='{
 
      "loop": true,
      
      {% if section.settings.dot_style == 'dot_hide' %}
      	 "dots": false,
      {% else %}
     	 "dots": true,
      {% endif %}
      
      {% if section.settings.nav_style == 'style_5' %}
          "nav": false,
      {% else %}
          "nav": true,
      {% endif %}
      
      {% if settings.rtl_enable %}
      "rtl": true,
      {% endif %}
      "autoplay": false,
      {%- if section.settings.nav_style == 'style_1' -%}
      "navText": ["<i class=&#x27;sli sli-arrow-left&#x27;></i>","<i class=&#x27;sli sli-arrow-right&#x27;></i>"],
      {%- elsif section.settings.nav_style == 'style_2' -%}
      "navText": ["<i class=&#x27;sli sli-arrow-up&#x27;></i>","<i class=&#x27;sli sli-arrow-down&#x27;></i>"],
      {%- elsif section.settings.nav_style == 'style_4' -%}
      "navText": ["<i class=&#x27;sli sli-arrow-up&#x27;></i>","<i class=&#x27;sli sli-arrow-down&#x27;></i>"],
      {%- elsif section.settings.nav_style == 'style_3' -%}
      "navText": ["<i class=&#x27;sli sli-arrow-up&#x27;></i><span>Prev</span>","<i class=&#x27;sli sli-arrow-down&#x27;></i><span>Next</span>"],
	  {%- endif -%}
      "autoplayTimeout": 5000,
      "animateOut": "fadeOut",
      "animateIn": "fadeIn",
      "item": 1,
        "responsive": {
            "0": {
                "items": 1
            },
            "768": {
                "items": 1
            },
            "1000": {
                "items": 1
            }
      }}'>


      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'slide' -%}
      <div class="class-{{block.id}} single-slider d-flex align-items-center {% if section.settings.enable_responsive_style_2 %} slider__responsive__class{% endif %}" style="background-color:{{ block.settings.sec_bg_color }};height: {% if section.settings.slider_height_opt == 'fixed_height' %}{{ section.settings.p_top }}px {% else %} 100vh {%endif%};

        {%- if block.settings.slider_bg_img -%}background-image: url('{{ block.settings.slider_bg_img | img_url: 'master' }}'){% endif %} ">
        
        <div class="{% if section.settings.content_width == 'full_width' %}container-fluid {% elsif section.settings.content_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.content_width == 'default' %}default container {% endif %}">
          <div class="row align-items-left {% if block.settings.content_position == 'right' %} flex-row-reverse {% elsif block.settings.content_position == 'center' %}justify-content-center {% elsif block.settings.content_position == 'left' %} justify-content-left{% endif %}">

            {% if section.settings.enable_responsive_style_2 %}
              <div class="col-12 slider__responsive__image">
                  <img src="{{ block.settings.slider_bg_img | img_url: 'master' }}">
              </div>
            {% endif %}
       
            <div class="col-lg-{{block.settings.slider_content_col}} col-md-{{block.settings.slider_content_col_md}} col-sm-12 col-12">
              <div class="slider-content slider-animated-1 text-{% if block.settings.content_align == 'center' %}center{% elsif block.settings.content_align == 'right' %}right{% else %}left{% endif %}">
  
  
                {%- if block.settings.title_top != '' -%}
                <h3 class="animated">{{ block.settings.title_top }}</h3>
                {%- endif -%}
  
  
                {%- if block.settings.title1 != '' -%}
                <h1 class="animated">{{ block.settings.title1 }}</h1>
                {%- endif -%}
  
                {%- if block.settings.description != '' -%}
                <p class="animated">{{ block.settings.description }}</p>
                {%- endif -%}
  
                

                {%- if block.settings.show_animated_btn or block.settings.btn != '' -%}

                <div class="slider__animated__btn__wrap">
                  {%- if block.settings.btn != '' -%}
                  <div class="slider-btn btn-hover">
                    <a class="animated" href="{{ block.settings.btn_url }}">
                      {{ block.settings.btn }} {% if block.settings.show_icon %} <i style="font-size:{{ block.settings.btn_font_size }}px;" class="icofont-cart-alt"></i>{% endif %}
                    </a>
                  </div>
                  {%- endif -%}

                  {%- if block.settings.show_animated_btn  -%}
                  <div class="slider__animated__btn animated">
                    <a class="video-popup magni_video_pop" href="{{ block.settings.animaet_btn_url }}">
                      <i class="icofont-play"></i>
                    </a>
                    {%- if block.settings.btn_animated != '' -%}
                    <span>{{ block.settings.btn_animated }}</span>
                    {%- endif -%}
                  </div>
                  {%- endif -%}

                </div>
                {%- endif -%}
                
                
              </div>
            </div>


        
            {%- if block.settings.slider_img_enable -%}
            <div class="col-lg-{{block.settings.slider_img_col}} col-md-{{block.settings.slider_img_col_md}} col-sm-12 col-12">
              <div class="slider-single-img slider-animated-1">
                {%- if block.settings.slider_img -%}
                <img class="animated" src="{{ block.settings.slider_img | img_url: 'master' }}" alt="{{ image.alt }}">
                {%- else -%}
                <img class="animated" src="https://via.placeholder.com/620x877" alt="{{ image.alt }}">
                {%- endif -%}
              </div>
            </div>
            {%- endif -%}
  
          </div>
        </div>
  
  
  
 
  
        {%- if block.settings.slider_content_custom_style -%}    
        
            {%- assign header_font_top = block.settings.header_font_top -%}
            {%- assign header_font_slider = block.settings.header_font_slider -%}
            {%- assign paragraph_font_slider = block.settings.paragraph_font_slider -%}
            {%- assign button_font_slider = block.settings.button_font_slider -%} 
