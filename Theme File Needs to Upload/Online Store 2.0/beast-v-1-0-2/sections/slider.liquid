              margin-bottom: {{block.settings.title_margin_bottom}}px;
            }
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content h1 span {
              color: {{ settings.color_primary }};
            }
            
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content p {
              font-family: {{ paragraph_font_slider.family }}, {{ paragraph_font_slider.fallback_families }};
              font-style: {{ paragraph_font_slider.style }};
              font-weight: {{ paragraph_font_slider.weight }};
              color:{{ block.settings.description_color }};
              font-size:{{ block.settings.description_font_size }}px;
              line-height: {{block.settings.des_line_height}}px;
              margin:0 0 {{block.settings.des_margin_bottom}}px;
            }
            
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content p span {
              color: {{ settings.color_primary }};
            }
            
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider-btn a {
              background-color: {{ block.settings.btn_bg_color }};
              color: {{ block.settings.btn_color }};
              border: 1px solid {{ block.settings.btn_border_color }};
              border-radius: {{ block.settings.btn_border_radius }}px;
              padding:{{block.settings.button_padding_tb}}px {{block.settings.button_padding_lr}}px;
              text-transform: unset;
              font-size:{{ block.settings.btn_font_size }}px;
              font-family: {{ button_font_slider.family }}, {{ button_font_slider.fallback_families }};
              font-style: {{ button_font_slider.style }};
              font-weight: {{ button_font_slider.weight }};
            }
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider__animated__btn__wrap{
              margin-top: {{block.settings.button_margin_top}}px;
            }
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider-btn a i {
              color: {{ block.settings.btn_color }};
              font-size:{{ block.settings.btn_font_size }}px;
            }
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider-btn a:hover {
              background-color: {{ block.settings.btn_hover_bg_color }};
              color: {{ block.settings.btn_hover_color }};
              border: 1px solid {{ block.settings.btn_hover_border_color }};
            }
            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider-btn a:hover i {
              color: {{ block.settings.btn_hover_color }};
            }
            
            
            
            #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 h3 {
              -webkit-animation-name: {{block.settings.content_animation}};
              animation-name: {{block.settings.content_animation}};
            }
            #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 h1 {
              -webkit-animation-name: {{block.settings.content_animation}};
              animation-name: {{block.settings.content_animation}};
            }
            #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 p {
              -webkit-animation-name: {{block.settings.content_animation}};
              animation-name: {{block.settings.content_animation}};
            }
            #section-{{ section.id }}.slider-area .owl-item.active .class-{{block.id}}.single-slider .slider-animated-1 .animated{
              -webkit-animation-name: {{block.settings.content_animation}};
              animation-name: {{block.settings.content_animation}};
            }
                
            
            {%- if block.settings.show_animated_btn -%} 

              #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider__animated__btn a {
                box-shadow: 0 4px 30px  {{ block.settings.animated_btn_color | color_modify: 'alpha', 0.2 }};
                color: {{ block.settings.animated_btn_color }};
                border: 1px solid {{ block.settings.animated_btn_color }};
                font-size:{{ block.settings.animate_btn_font_size }}px;
                height: {{ block.settings.animate_btn_size }}px;
                width: {{ block.settings.animate_btn_size }}px;
                line-height: {{ block.settings.animate_btn_size }}px;
              }

              #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content .slider__animated__btn span {
                color: {{ block.settings.animated_btn_color }};
                font-size:{{ block.settings.animate_btn_font_size }}px;
                font-family: {{ animate_button_font_slider.family }}, {{ animate_button_font_slider.fallback_families }};
                font-style: {{ animate_button_font_slider.style }};
                font-weight: {{ animate_button_font_slider.weight }};
              }

            #section-{{ section.id }}.slider-area .class-{{block.id}} .slider__animated__btn .magni_video_pop:before,
            #section-{{ section.id }}.slider-area .class-{{block.id}} .slider__animated__btn .magni_video_pop:after {
              -webkit-box-shadow: 0 0 0 0 {{ block.settings.animated_btn_color }};
              -moz-box-shadow: 0 0 0 0 {{ block.settings.animated_btn_color }};
              -ms-box-shadow:0 0 0 0 {{ block.settings.animated_btn_color }};
              -o-box-shadow:0 0 0 0 {{ block.settings.animated_btn_color }};
              box-shadow:0 0 0 0 {{ block.settings.animated_btn_color }};
              height: {{ block.settings.animate_btn_size }}px;
              width: {{ block.settings.animate_btn_size }}px;
            }
            
            {%- endif -%}

            
            
            
            
            {%- if block.settings.heading_bottom_border_line -%} 

            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content h1 {
              position: relative;
            }

            #section-{{ section.id }}.slider-area .class-{{block.id}}.single-slider .slider-content h1::before {
              position: absolute;
              content: "";
              background: {{ block.settings.heading_border_bottom_color }};
              height: 5px;
              width: 70px;
              bottom: -{{block.settings.border_top_spacing}}px;
            }
            
            {%- endif -%}
            
            
            

          </style>
  
        {%endif%}
  
      </div>
  
      {%- endcase -%}
      {%- endfor -%}
  
  
    </div>
  </div>
  
  
  
  {%- if section.settings.nav_custom_style -%}  
  <style>
    #section-{{ section.id }}.slider-area .nav-style-1.owl-carousel .owl-nav div, 
    #section-{{ section.id }}.slider-area .nav-style-2 .owl-nav div, 
    #section-{{ section.id }}.slider-area .nav-style-3 .owl-nav div {
      color: {{ section.settings.controlnav_color }};
      background-color: {{ section.settings.controlnav_bg_color }};
      border: 1px solid {{ section.settings.controlnav_border_color }};
      border-radius:{{section.settings.nav_border_radius}}px;
    }
    #section-{{ section.id }}.slider-area .nav-style-1.owl-carousel .owl-nav div:hover, 
    #section-{{ section.id }}.slider-area .nav-style-2 .owl-nav div:hover, 
    #section-{{ section.id }}.slider-area .nav-style-3 .owl-nav div:hover {
      color: {{ section.settings.hover_controlnav_color }};
      background-color: {{ section.settings.hover_controlnav_bg_color }};
      border: 1px solid {{ section.settings.hover_controlnav_border_color }};
    }
  </style>
  {%endif%}
  
  
  {%- if section.settings.dot_custom_style -%}  
  <style>

    #section-{{ section.id }}.slider-area .dot-style-1 .owl-dots .owl-dot {
      border: 1px solid {{section.settings.dot_color}};
      outline: 1px solid {{section.settings.dot_color}};
    }

    #section-{{ section.id }}.slider-area .dot-style-1 .owl-dots .owl-dot.active {
      background-color: {{section.settings.dot_active_color}};
      border: 1px solid {{section.settings.dot_active_color}};
      outline: 1px solid {{section.settings.dot_active_color}};
    }    

  </style>
  {%endif%}


<style>
.slider__animated__btn__wrap {
    display: flex;
  }
  
.single-slider .slider-content .slider__animated__btn a {
    height: 65px;
    box-shadow: 0 4px 30px  {{ settings.color_primary | color_modify: 'alpha', 0.2 }};
	position: absolute;
    border-radius: 100%;
    width: 65px;
    line-height: 65px;
    text-align: center;
    color: {{ settings.color_primary }};
    border: 1px solid {{ settings.color_primary }};
}
  
.single-slider .slider-content .slider__animated__btn {
    margin-left: 40px;
    position: relative;
    display: flex;
    align-items: center;
    font-size: 20px;
  }
  .single-slider .slider-content .slider-btn.slider__animated__btn a{
    margin-right: 10px;
  }

.single-slider .slider-content .slider__animated__btn span {
    position: relative;
    left: 90px;
    color: {{ settings.color_primary }};
}

.slider__animated__btn .magni_video_pop:before,
.slider__animated__btn .magni_video_pop:after {
	position: absolute;
	top: 50%;
	left: 50%;
	height: 65px;
	width: 65px;
	-webkit-transform: translateX(-50%) translateY(-50%);
	transform: translateX(-50%) translateY(-50%);
	-webkit-transform-origin: center;
	transform-origin: center center;
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	-ms-border-radius: 50%;
	-o-border-radius: 50%;
	border-radius: 50%;
	-webkit-box-shadow: 0 0 0 0 {{ settings.color_primary }};
	-moz-box-shadow: 0 0 0 0 {{ settings.color_primary }};
	-ms-box-shadow:0 0 0 0 {{ settings.color_primary }};
	-o-box-shadow:0 0 0 0 {{ settings.color_primary }};
	box-shadow:0 0 0 0 {{ settings.color_primary }};
	-webkit-animation: ripple 3s infinite;
	-moz-animation: ripple 3s infinite;
	-ms-animation: ripple 3s infinite;
	-o-animation: ripple 3s infinite;
	animation: ripple 3s infinite;
}

.slider__animated__btn .magni_video_pop:before {
	-webkit-animation-delay: .9s;
	-moz-animation-delay: .9s;
	-ms-animation-delay: .9s;
	-o-animation-delay: .9s;
	animation-delay: .9s;
	content: "";
	position: absolute;
}

.slider__animated__btn .magni_video_pop:after {
	-webkit-animation-delay: .6s;
	-moz-animation-delay: .6s;
	-ms-animation-delay: .6s;
	-o-animation-delay: .6s;
	animation-delay: .6s;
	content: "";
	position: absolute;
}

@-webkit-keyframes ripple {
	70% {
		box-shadow: 0 0 0 20px rgba(255, 255, 255, 0);
	}
	100% {
		box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
	}
}

@keyframes ripple {
	70% {
		box-shadow: 0 0 0 20px rgba(255, 255, 255, 0);
	}
	100% {
		box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
	}
}
  
</style>


