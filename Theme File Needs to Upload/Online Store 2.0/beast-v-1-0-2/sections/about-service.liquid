{%- assign sset = section.settings -%}{%- if sset.show_about_service -%}

<div class="feature-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
    <div class="row">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'service' -%}
      {%- assign bset = block.settings -%}
      <div class="col-lg-{{ sset.service_col }} col-md-6">
        
        {% if section.settings.service_style == 'style_one' %}
        
        <div class="single-feature mb-40">
          {%- if bset.show_service_img -%}
          <div class="feature-icon">
            {%- if bset.service_img -%}
            <img src="{{ bset.service_img | img_url: 'small' }}" alt="{{ image.alt }}">
            {%- else -%}
            <img src="https://via.placeholder.com/100x100" alt="{{ image.alt }}">
            {%- endif -%}
          </div>
          {%- endif -%}
          <div class="feature-content">
            {%- if bset.title != '' -%}
            <h4 style="color: {{ sset.ft_title_color }}">{{ bset.title }}</h4>
            {%- endif -%}

            {%- if bset.content != '' -%}
            <p style="color: {{ sset.ft_content_color }}">{{ bset.content }}</p>
            {%- endif -%}
          </div>
        </div>
        
        {% elsif section.settings.service_style == 'style_two' %}
        
        <div class="single-feature style_two mb-40">
          {%- if bset.show_service_img -%}
          <div class="feature-icon">
            {%- if bset.service_img -%}
            <img src="{{ bset.service_img | img_url: 'small' }}" alt="{{ image.alt }}">
            {%- else -%}
            <img src="https://via.placeholder.com/100x100" alt="{{ image.alt }}">
            {%- endif -%}
          </div>
          {%- endif -%}
          <div class="feature-content">
            {%- if bset.title != '' -%}
            <h4 style="color: {{ sset.ft_title_color }}">{{ bset.title }}</h4>
            {%- endif -%}

            {%- if bset.content != '' -%}
            <p style="color: {{ sset.ft_content_color }}">{{ bset.content }}</p>
            {%- endif -%}
          </div>
        </div>
        
        {% endif %}
        
      </div>
      {%- endcase -%}
      {%- endfor -%}      
    </div>
  </div>
</div>

{%- render 'section-style' -%}

{% style %}
#section-{{ section.id }} .single-feature .feature-content h4::before {
    background-color: {{ sset.ft_title_color }};
}
{% endstyle %}

{%- endif -%}


