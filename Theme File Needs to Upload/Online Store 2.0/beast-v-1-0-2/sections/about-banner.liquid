{%- assign sset = section.settings -%}{%- if sset.show_banner_section -%}
<div class="banner-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
   
    <div class="row">
      {%- for block in section.blocks -%}{%- case block.type -%}
      {%- when 'banner' -%}{%- assign bset = block.settings -%}
      <div class="col-lg-{{ bset.ban_col }} col-md-{{ bset.ban_col }} block_{{ block.id }}">
        <div class="single-banner mb-30 scroll-zoom{% if bset.text1_p == 'style_2' %} text-center{% endif %}">
          <a href="{{ bset.btn1_url }}">
            {%- if bset.img1 -%}
            <img class="animated" src="{{ bset.img1 | img_url: 'master' }}" alt="{{ image.alt }}">              
            {%- else -%}
            <img class="animated" src="https://via.placeholder.com/570x550" alt="{{ image.alt }}">
            {%- endif -%}
          </a>
          <div class="banner-content{% if bset.text1_p == 'style_2' %}-3{% endif %} banner-position-{% if bset.text1_p == 'style_1' %}6{% elsif bset.text1_p == 'style_2' %}7{% endif %}">
            {%- if bset.t1 != '' -%}
            <h3 style="color:{{ bset.t1_color }};">{{ bset.t1 }}</h3>
            {%- endif -%}

            {%- if bset.t2 != '' -%}
            <h2 style="color:{{ bset.t2_color }};">{{ bset.t2 }}</h2>
            {%- endif -%}

            {%- if bset.btn1 != '' -%}
            <a class="ban_btn1" href="{{ bset.btn1_url }}" style="color: {{ bset.btn1_color }}; border-bottom: 1px solid {{ bset.btn1_border_color }};">{{ bset.btn1 }}</a>
            {%- endif -%}
          </div>
        </div>
      </div>
      
      {%- when 'image' -%}{%- assign bset = block.settings -%}
      <div class="col-lg-{{ bset.ban_col }} col-md-{{ bset.ban_col }}">
        <div class="single-banner mb-30 text-center scroll-zoom">
          <a href="{{ bset.ban_url }}">
            {%- if bset.ban_img -%}
            <img class="animated" alt="{{ image.alt }}" src="{{ bset.ban_img | img_url: 'master' }}">
            {%- else -%}
            <img class="animated" alt="placeholder-image" src="https://via.placeholder.com/770x200">
            {%- endif -%}
          </a>
        </div>
      </div>
      {%- endcase -%}{%- endfor -%}
    </div>
  </div>
</div>

{%- render 'section-style' -%}
{%- endif -%}



