{%- if section.settings.show_ft_top -%}
<div class="theme_footer_top" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
   
    <div class="footer-top-2 pb-20 footer_style_1">
      <div class="row">
        {%- for block in section.blocks -%}{%- case block.type -%}
        {%- when 'newsletter' -%}
        <div class="col-lg-{{ block.settings.widget_col }} col-md-{{ block.settings.widget_col_md }} col-sm-12 col-12">
          <div class="footer-widget mb-40">
            {%- if block.settings.logo -%}
            <a class="footer_logo mb-30" href="/">
              <img src="{{ block.settings.logo | img_url: 'medium' }}" alt="{{ image.alt }}">
            </a>
            {%- endif -%}
            
            {%- if block.settings.title != '' -%}
            <div class="footer-title">
              <h3>{{ block.settings.title }}</h3>
            </div>
            {%- endif -%}

           
            <div class="subscribe-style">
              {%- if block.settings.content != '' -%}
              <p>{{ block.settings.content }}</p>
              {%- endif -%}
               {%- if block.settings.newsletter_form_show -%}
              <div id="mc_embed_signup" class="subscribe-form">
                {%- render 'newsletter-form' -%}
              </div>
              
              {%- if block.settings.secure_content != '' -%}
              <p>{{ block.settings.secure_content }}</p>
              {%- endif -%}
              
              {%- endif -%}              
            </div>
            
            {%- if block.settings.app_store_img -%}
            <a class="app_store_img" href="{{block.settings.apps_url}}">
              <img src="{{ block.settings.app_store_img | img_url: 'large' }}" alt="{{ image.alt }}">
            </a>
            {%- endif -%}
            
            
            
          </div>
        </div>

        {%- when 'ft_menu' -%}
        <div class="col-lg-{{ block.settings.widget_col }} col-md-{{ block.settings.widget_col_md }} col-sm-6 col-6">
          <div class="footer-widget mb-40">
            {%- if block.settings.title != '' -%}
            <div class="footer-title">
              <h3>{{ block.settings.title }}</h3>
            </div>
            {%- endif -%}

            <div class="footer-list">
              <ul>
                {%- assign ft_menu = block.settings.ft_menu_handle -%}
                {%- for link in linklists[ft_menu].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {%- endfor -%}
              </ul>
            </div>
          </div>
        </div>
        
        
		{%- when 'ft_social' -%}
        <div class="col-lg-{{ block.settings.widget_col }} col-md-{{ block.settings.widget_col_md }} col-sm-6 col-6">
          <div class="footer-widget mb-40">
            {%- if block.settings.title != '' -%}
            <div class="footer-title">
              <h3>{{ block.settings.title }}</h3>
            </div>
            {%- endif -%}

            <div class="social_widget">
              {% if block.settings.social1 != '' %}
              <a href="{{ block.settings.social1_url }}"><i class="sli sli-social-{{ block.settings.social1 }}"></i>{{ block.settings.social1 }}</a>
              {% endif %}

              {% if block.settings.social2 != '' %}
              <a href="{{ block.settings.social2_url }}"><i class="sli sli-social-{{ block.settings.social2 }}"></i>{{ block.settings.social2 }}</a>
              {% endif %}

              {% if block.settings.social3 != '' %}
              <a href="{{ block.settings.social3_url }}"><i class="sli sli-social-{{ block.settings.social3 }}"></i>{{ block.settings.social3 }}</a>
              {% endif %}

              {% if block.settings.social4 != '' %}
