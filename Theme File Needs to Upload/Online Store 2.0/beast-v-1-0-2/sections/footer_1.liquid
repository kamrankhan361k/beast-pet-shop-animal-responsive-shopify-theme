              {% endif %}

              {% if block.settings.social5 != '' %}
              <a href="{{ block.settings.social5_url }}"><i class="sli sli-social-{{ block.settings.social5 }}"></i>{{ block.settings.social5 }}</a>
              {% endif %}
            </div>

          </div>
        </div>
        
        {%- endcase -%}
        
        {%- endfor -%}
      </div>
    </div>

  </div>
</div>

{%- if section.settings.custom_footer_style -%}
<style>
  .footer-widget .footer-title h3 {
    color: {{ section.settings.ft_title_color }};
  }
  .subscribe-style p, .footer-widget .footer-list ul li a, .footer-top ul li a,.theme_footer_top .social_widget a,.footer-widget .footer-list ul li {
    color: {{ section.settings.ft_content_color }};
  } 
  .theme_footer_top .footer-widget .subscribe-style p {
    color: {{ section.settings.ft_content_color }};
  }
  .subscribe-style .subscribe-form .mc-form .clear:hover {
    background-color: {{ settings.color_primary }};
  }  
  .footer-top ul li a:hover {
    color: {{ settings.color_primary }};
  }
  
  .subscribe-style .subscribe-form .mc-form input::-moz-placeholder {
    color: {{ section.settings.ft_content_color }} !important;
  }
  .subscribe-style .subscribe-form .mc-form input::-webkit-input-placeholder {
    color: {{ section.settings.ft_content_color }} !important;
  }
  .subscribe-style .subscribe-form .mc-form input {
    border-color: {{ section.settings.ft_content_color }}
  }
  
  .footer_style_1 .subscribe-style .subscribe-form .mc-form input {
    border: 1px solid {{ section.settings.ft_content_color }};
  }

  .footer_style_1 .subscribe-style .subscribe-form .mc-form .sbs_btn {
    background: {{ section.settings.ft_content_color }};
  }
  
  
  {%- for block in section.blocks -%}{%- case block.type -%}
    {%- when 'newsletter' -%}
    .footer_style_1 .subscribe-style .subscribe-form .mc-form .sbs_btn input {
      color: {{ block.settings.subscribe_btn_Color }};
    }
    {%- endcase -%}
  {%- endfor -%}
  
  
  
  
  {%- assign footer_heading_font = section.settings.footer_heading_font -%}
  {%- assign footer_font_drop_mega = section.settings.footer_font_drop_mega -%}

  {{ footer_heading_font | font_face }}
  {{ footer_font_drop_mega | font_face }}

  
  .theme_footer_top .footer-widget .footer-title h3 {
    font-family: {{ footer_heading_font.family }}, {{ footer_heading_font.fallback_families }};
    font-style: {{ footer_heading_font.style }};
    font-weight: {{ footer_heading_font.weight }};
    font-size:{{ section.settings.footer_heading_font_size }}px;
  }

  .theme_footer_top .subscribe-style p,
  .theme_footer_top .footer-widget .footer-list ul li a,
  .theme_footer_top .footer-top ul li a,
  .theme_footer_top .subscribe-style .subscribe-form .mc-form input,
  .theme_footer_top .social_widget a{
    font-family: {{ footer_font_drop_mega.family }}, {{ footer_font_drop_mega.fallback_families }};
    font-style: {{ footer_font_drop_mega.style }};
    font-weight: {{ footer_font_drop_mega.weight }};
    font-size:{{ section.settings.footer_font_drop_mega_size }}px;
  }
    
  
</style>
{%- endif -%}

