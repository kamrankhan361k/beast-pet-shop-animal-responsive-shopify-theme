{%- assign sset = section.settings -%}{%- if sset.show_about_section -%}
<div class="about-story-area" id="section-{{ section.id }}">
  <div class="container">
    {%- if sset.page_content == 'page' -%}
    <div class="row">
      <div class="col-lg-12">
        {{ page.content }}
      </div>
    </div>
    {%- else -%}
    <div class="row{% if sset.image_position == 'right' %} flex-row-reverse{% endif %}">
      {%- if sset.show_image -%}
      <div class="{% if sset.show_content %}col-lg-6{% else %}col-lg-12{% endif %}">
        <div class="story-img">
          <a href="#" class="remove_href">
            {%- if sset.about_img -%}
            <img src="{{ sset.about_img | img_url: 'master' }}" alt="{{ image.alt }}">
            {%- else -%}
            <img src="https://via.placeholder.com/570x474" alt="placeholder-img">
            {%- endif -%}
          </a>          
        </div>
      </div>
      {%- endif -%}

      {%- if sset.show_content -%}
      <div class="{% if sset.show_image %}col-lg-6{% else %}col-lg-12{% endif %}">
        <div class="story-details">
          {%- if sset.title != '' or sset.subtitle != '' -%}
          <div class="story-details-top">
            {%- if sset.title != '' -%}
            <h2>{{ sset.title }}</h2>
            {%- endif -%}

            {%- if sset.subtitle != '' -%}
            <p>{{ sset.subtitle }}</p>
            {%- endif -%}
          </div>
          {%- endif -%}

          {%- for block in section.blocks -%}{%- case block.type -%}
          {%- when 'content' -%}
          <div class="story-details-bottom">
            {%- if block.settings.title != '' -%}
            <h4>{{ block.settings.title }}</h4>
            {%- endif -%}

            {%- if block.settings.subtitle != '' -%}
            <p>{{ block.settings.subtitle }}</p>
            {%- endif -%}
          </div>
          {%- endcase -%}{%- endfor -%}
        </div>
      </div>
      {%- endif -%}
    </div>
    {%- endif -%}
  </div>
</div>

{%- render 'section-style' -%}
{%- endif -%}





