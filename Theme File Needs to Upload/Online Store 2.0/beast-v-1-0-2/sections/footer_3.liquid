              <h3>{{ block.settings.title }}</h3>
            </div>
            {%- endif -%}

            <div class="social_widget">
              {% if block.settings.help_info_1 != '' or block.settings.help_info_1_text != '' %}
              <a href="{{ block.settings.help_info_1_url }}">{{ block.settings.help_info_1 }} {{ block.settings.help_info_1_text }}</a>
              {% endif %}

              {% if block.settings.help_info_2 != '' or block.settings.help_info_2_text != '' %}
