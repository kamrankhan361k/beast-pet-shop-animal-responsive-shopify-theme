{%- if section.settings.custom_footer_style -%}
<style>
  .footer-widget .footer-title h3 {
    color: {{ section.settings.ft_title_color }};
  }
  .subscribe-style p, .footer-widget .footer-list ul li a, .footer-top-2 ul li a,.theme_footer_top .social_widget a,.footer-widget .footer-list ul li {
    color: {{ section.settings.ft_content_color }};
    transition:.3s
  } 
  .theme_footer_top .footer-widget .subscribe-style p {
    color: {{ section.settings.ft_content_color }};
  }
  #section-{{ section.id }} .subscribe-style .subscribe-form .mc-form .clear:hover {
    background-color: {{ section.settings.ft_content_color_hover }};
  }  
  #section-{{ section.id }} .footer-top-2 ul li a:hover,
  #section-{{ section.id }} .footer-top-2 ul li:hover{
    color: {{ section.settings.ft_content_color_hover }};
  }
  
  .subscribe-style .subscribe-form .mc-form input::-moz-placeholder {
    color: {{ section.settings.ft_content_color }} !important;
  }
  .subscribe-style .subscribe-form .mc-form input::-webkit-input-placeholder {
    color: {{ section.settings.ft_content_color }} !important;
  }
  .subscribe-style .subscribe-form .mc-form input {
    border-color: {{ section.settings.ft_content_color }}
  }
  
  .footer_style_3 .subscribe-style .subscribe-form .mc-form input {
    border: 1px solid {{ section.settings.ft_content_color }};
  }

  .footer_style_3 .subscribe-style .subscribe-form .mc-form .sbs_btn {
    background: {{ section.settings.ft_content_color }};
  }
  
  
  {%- for block in section.blocks -%}{%- case block.type -%}
    {%- when 'newsletter' -%}
    .footer_style_3 .subscribe-style .subscribe-form .mc-form .sbs_btn input {
      color: {{ block.settings.subscribe_btn_Color }};
    }
    {%- endcase -%}
  {%- endfor -%}
  
  
  
  
  {%- assign footer_heading_font = section.settings.footer_heading_font -%}
  {%- assign footer_font_drop_mega = section.settings.footer_font_drop_mega -%}

  {{ footer_heading_font | font_face }}
  {{ footer_font_drop_mega | font_face }}

  
  .theme_footer_top .footer-widget .footer-title h3 {
    font-family: {{ footer_heading_font.family }}, {{ footer_heading_font.fallback_families }};
    font-style: {{ footer_heading_font.style }};
    font-weight: {{ footer_heading_font.weight }};
    font-size:{{ section.settings.footer_heading_font_size }}px;
  }

  .theme_footer_top .subscribe-style p,
  .theme_footer_top .footer-widget .footer-list ul li a,
  .theme_footer_top .footer-top-2 ul li a,
  .theme_footer_top .subscribe-style .subscribe-form .mc-form input,
  .theme_footer_top .social_widget a{
    font-family: {{ footer_font_drop_mega.family }}, {{ footer_font_drop_mega.fallback_families }};
    font-style: {{ footer_font_drop_mega.style }};
    font-weight: {{ footer_font_drop_mega.weight }};
    font-size:{{ section.settings.footer_font_drop_mega_size }}px;
  }
    
  
  
  
  .footer_style_3 .subscribe-style p {
    width: 95%;
    margin-bottom: 15px;
  }
  .footer_style_3 .subscribe-form {
    margin-bottom: 15px;
  }
  .footer_style_3 .footer-widget {
    padding: 35px 40px 20px;
  }
.footer_style_3 .footer-widget.about_newsletter_info {
    padding-left: 0;
    padding-right: 0;
}

.footer__top__area {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 40px 0;
	flex-wrap: wrap;
}

  @media (max-width: 767px){
    .footer__top__area > div {
      margin-bottom: 15px;
    }
  }

.footer__top__contact__area {
    color: {{ section.settings.ft_content_color }};
    font-size: 20px;
  	font-family:{{ footer_heading_font.family }}, {{ footer_heading_font.fallback_families }};
}

.footer__top__contact__area strong {
    font-size: 22px;
}

.footer__top__contact__area i {
    font-size: 24px;
    display: inline-block;
    margin-right: 8px;
    position: relative;
    top: 2px;
}
  
.footer__top__social__wrap a {
    font-size: 16px;
    color: {{ section.settings.ft_content_color }};
    height: 45px;
    width: 45px;
    border: 1px solid {{ section.settings.ft_content_color }};
    display: inline-block;
    line-height: 45px;
    text-align: center;
    margin-right: 10px;
    border-radius: 100px;
}
  .footer__top__social__wrap a:last-child {
    margin: 0;
  }
  #section-{{ section.id }} .footer__top__social__wrap a:hover {
    color: {{ section.settings.ft_content_color_hover }};
    background: {{ section.settings.ft_content_color }};
    border-color: {{ section.settings.ft_content_color }};
  }
  
  #section-{{ section.id }}.theme_footer_top .footer-widget.help_info_wrap .social_widget a:hover{
    color: {{ section.settings.ft_content_color_hover }};
  }
  
  .footer__top__logo__area .footer_logo img {
    max-width: 150px;
  }
  .footer_style_3 .subscribe-style .subscribe-form.sf_style_2 .mc-form .sbs_btn {
    width: auto;
    padding: 0 20px;
    height: 50px;
    border-radius: 0 5px 5px 0;
  }

  .footer_style_3 .subscribe-style .subscribe-form.sf_style_2 .mc-form input {
    height: 50px;
    border-radius: 5px;
  }
  
</style>
{%- endif -%}

