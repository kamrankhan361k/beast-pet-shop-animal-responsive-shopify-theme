              <a href="{{ block.settings.social5_url }}"><i class="sli sli-social-{{ block.settings.social5 }}"></i>{{ block.settings.social5 }}</a>
              {% endif %}
            </div>

          </div>
        </div>
        
        
        {%- when 'help_info' -%}
        <div class="col-lg-{{ block.settings.widget_col }} col-md-{{ block.settings.widget_col_md }} col-sm-6 col-12">
          <div class="footer-widget help_info_wrap mb-40">
            {%- if block.settings.title != '' -%}
