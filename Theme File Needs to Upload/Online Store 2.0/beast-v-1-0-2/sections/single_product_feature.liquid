           {{ single_feature_heading | font_face }}     
           {{ des_text_font | font_face }}
           {{ button_title | font_face }}

       
          #section-{{ section.id }}.single_product_feature .banner-bg-content h3 {
             color:{{ section.settings.t1_color }};
             font-family: {{ bottom_title.family }}, {{ bottom_title.fallback_families }};
             font-style: {{ bottom_title.style }};
             font-weight: {{ bottom_title.weight }};
             font-size:{{ section.settings.bottom_title_font_size }}px;        
