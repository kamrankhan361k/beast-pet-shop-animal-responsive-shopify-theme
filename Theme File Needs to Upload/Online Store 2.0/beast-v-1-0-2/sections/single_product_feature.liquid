<div class="banner-area single_product_feature" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
     
    {% if section.settings.section_title != '' or section.settings.section_sub_title != '' %}
    <div class="section-title {{ section.settings.title_align }} pb-60">
      {% if section.settings.section_title != '' %}
      <h2>{{ section.settings.section_title }}</h2>
      {% endif %}

      {% if section.settings.section_sub_title != '' %}
      <p>{{ section.settings.section_sub_title }}</p>
      {% endif %}
    </div>
    {% endif %}
    
    
    <div class="row {% if section.settings.content_position == 'left' %} flex-row-reverse {% else %} content-right {% endif %} {% if section.settings.grid_style_ebable %} grid_style_wrap{% endif %}">
      
       {%- if section.settings.content_column_left_enable -%}
       <div class="col-lg-{{ section.settings.content_column_handle_left }} col-sm-{{ section.settings.content_column_handle_left_sm }} single_feature_left {%if section.settings.content_align_left == 'right'%} feature_content_align {% endif %}">
         <div class="banner-bg-content scroll-zoom">
           {%- if section.settings.t1_left != '' -%}
           <h3>{{ section.settings.t1_left }}</h3>
           {%- endif -%}

           {%- if section.settings.t2_left != '' -%}
           <h2>{{ section.settings.t2_left }}</h2>
           {%- endif -%}


           <div class="all_features {% if section.settings.icon_top_enable %} icon_top_feature {% endif %} {% if section.settings.icon_border_enable %}icon_border_enable {% endif %}">

             {%- for block in section.blocks -%}
             {%- case block.type -%}
             {%- when 'single_feature_left' -%}

             <div class="single_feature">

               <div class="feature_icon">

                 {%- if block.settings.feature_icon_left != '' -%}            
                 <i class="{{ block.settings.feature_icon_left }}"></i> 

                 {%- elsif block.settings.img1_left -%}
                 <img src="{{ block.settings.img1_left | img_url: 'master' }}" alt="{{ image.alt }}">
                 {%- endif -%}   

               </div>

               {%- if block.settings.feature_text_left != '' or  block.settings.feature_des_left -%}  
               <div class="feature_text">
                 
                 {%- if block.settings.feature_text_left != '' -%}
                 <h4>{{ block.settings.feature_text_left }}</h4>
                 {%- endif -%}  

                 {%- if block.settings.feature_des_left != '' -%}
                 <p>{{ block.settings.feature_des_left }}</p>
                 {%- endif -%}  
                 
                 
               </div>
               {%- endif -%} 

             </div>


             {%- endcase -%}
             {%- endfor -%}

           </div>



           {%- if section.settings.btn1_left != '' -%}
           <a class="ban_btn1 {{ section.settings.button_style }}"  href="{{ section.settings.btn1_url_left }}">{{ section.settings.btn1_left }}</a>
           {%- endif -%}


         </div>
       </div>
       {%- endif -%} 
       
       {%- if section.settings.feature_img_enable -%}
       <div class="col-lg-{{ section.settings.img_product_column_handle }} col-sm-{{ section.settings.img_product_column_handle_sm }}">
         <div class="text_promotoin_img scroll-zoom">
           <a href="{{ section.settings.btn1_url }}">
             {%- if section.settings.img1 -%}
             <img class="animated" src="{{ section.settings.img1 | img_url: 'master' }}" alt="{{ image.alt }}">              
             {%- else -%}
             <img class="animated" src="https://via.placeholder.com/760x900" alt="{{ image.alt }}">
             {%- endif -%}
           </a>
         </div>
       </div>
       {%- endif -%}
       
       
       {%- if section.settings.content_column_right_enable -%}
       <div class="col-lg-{{ section.settings.content_column_handle }} col-sm-{{ section.settings.content_column_handle_sm }} single_feature_right {%if section.settings.content_align_right == 'right'%} feature_content_align {% endif %} ">
         <div class="banner-bg-content scroll-zoom">
           {%- if section.settings.t1_right != '' -%}
           <h3>{{ section.settings.t1_right }}</h3>
           {%- endif -%}

           {%- if section.settings.t2_right != '' -%}
           <h2>{{ section.settings.t2_right }}</h2>
           {%- endif -%}


           <div class="all_features {% if section.settings.icon_top_enable %} icon_top_feature {% endif %} {% if section.settings.icon_border_enable %}icon_border_enable {% endif %}">

             {%- for block in section.blocks -%}
             {%- case block.type -%}
             {%- when 'single_feature_right' -%}

             <div class="single_feature">

               <div class="feature_icon">

                 {%- if block.settings.feature_icon_right != '' -%}            
                 <i class="{{ block.settings.feature_icon_right }}"></i> 

                 {%- elsif block.settings.img1_right -%}
                 <img src="{{ block.settings.img1_right | img_url: 'master' }}" alt="{{ image.alt }}">
                 {%- endif -%}   

               </div>

               {%- if block.settings.feature_text_right != '' or block.settings.feature_des_right -%}  
               <div class="feature_text">
                 
                 {%- if block.settings.feature_text_right != '' -%}
                 <h4>{{ block.settings.feature_text_right }}</h4>
                 {%- endif -%}  
                 
                 {%- if block.settings.feature_des_right != '' -%}
                 <p>{{ block.settings.feature_des_right }}</p>
                 {%- endif -%}  

               </div>
               {%- endif -%} 

             </div>


             {%- endcase -%}
             {%- endfor -%}

           </div>



           {%- if section.settings.btn1 != '' -%}
           <a class="ban_btn1 {{ section.settings.button_style }}"  href="{{ section.settings.btn1_url }}">{{ section.settings.btn1 }}</a>
           {%- endif -%}


         </div>
       </div>
       {%- endif -%}
       
       
       
       
    </div>
  </div>
</div>





      
      {% if section.settings.content_custom_color %}
      
