           {%- assign top_title = section.settings.top_title -%}
           {%- assign bottom_title = section.settings.bottom_title -%} 
           {%- assign single_feature_heading = section.settings.single_feature_heading_font -%}
           {%- assign des_text_font = section.settings.des_text_font -%}
           {%- assign button_title = section.settings.button_title -%}

