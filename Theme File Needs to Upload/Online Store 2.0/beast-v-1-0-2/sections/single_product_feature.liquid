            	margin: 0 0 {{ section.settings.heading_text_font_margin }}px;
            }

            #section-{{ section.id }}.single_product_feature .banner-bg-content .single_feature {      
            	margin: 0 0 {{ section.settings.single_feature_margin_bottom }}px;
            }


            #section-{{ section.id }}.single_product_feature .banner-bg-content .feature_text h4 {
              color:{{ section.settings.heading_text_color }};
              font-family: {{ single_feature_heading.family }}, {{ single_feature_heading.fallback_families }};
              font-style: {{ single_feature_heading.style }};
              font-weight: {{ single_feature_heading.weight }};
              font-size:{{ section.settings.heading_text_font_size }}px;      
              line-height:{{ section.settings.heading_text_font_line_height }}px;
            }



            #section-{{ section.id }}.single_product_feature .banner-bg-content .feature_icon i {
              color:{{ section.settings.icon_color }};
              font-size:{{ section.settings.icon_font_size }}px;
			  border-color: {{ section.settings.icon_color }};
            }


            #section-{{ section.id }}.single_product_feature .banner-bg-content .feature_text p {
              color:{{ section.settings.des_text_color }};
              font-family: {{ des_text_font.family }}, {{ des_text_font.fallback_families }};
              font-style: {{ des_text_font.style }};
              font-weight: {{ des_text_font.weight }};
              font-size:{{ section.settings.des_text_font_size }}px;      
              line-height:{{ section.settings.des_text_font_line_height }}px;
            }




            @media (min-width: 768px) and (max-width: 992px) {

              #section-{{ section.id }}.single_product_feature .banner-bg-content h3 {
                 font-size:{{ section.settings.bottom_title_font_size_md }}px;        
                 line-height:{{ section.settings.bottom_title_font_line_height_md }}px;
               }          

              #section-{{ section.id }}.single_product_feature .banner-bg-content h2 {       
               font-size:{{ section.settings.top_title_font_size_md }}px;
               line-height:{{ section.settings.top_title_font_line_height_md }}px;
             }
              #section-{{ section.id }}.single_product_feature .banner-bg-content .feature_text h4 {
                font-size:{{ section.settings.heading_text_font_size_md }}px;      
                line-height:{{ section.settings.heading_text_font_line_height_md }}px;
              }

            }

            @media (min-width: 300px) and (max-width: 767px) {

              #section-{{ section.id }}.single_product_feature .banner-bg-content h3 {
                 font-size:{{ section.settings.bottom_title_font_size_sm }}px;        
                 line-height:{{ section.settings.bottom_title_font_line_height_sm }}px;
               }          

              #section-{{ section.id }}.single_product_feature .banner-bg-content h2 {       
               font-size:{{ section.settings.top_title_font_size_sm }}px;
               line-height:{{ section.settings.top_title_font_line_height_sm }}px;
             }
              #section-{{ section.id }}.single_product_feature .banner-bg-content .feature_text h4 {
                font-size:{{ section.settings.heading_text_font_size_sm }}px;      
                line-height:{{ section.settings.heading_text_font_line_height_sm }}px;
              }

            }


       
           #section-{{ section.id }}.single_product_feature .banner-bg-content a.ban_btn1 {
             font-family: {{ button_title.family }}, {{ button_title.fallback_families }};
             font-style: {{ button_title.style }};
             font-weight: {{ button_title.weight }};
             font-size:{{ section.settings.button_title_font_size }}px;               
             margin: {{ section.settings.button_title_margin }}px 0 0;
             color: {{ section.settings.btn1_color }};
           }
       
          #section-{{ section.id }}.single_product_feature .banner-bg-content a.ban_btn1:hover {
          	color: {{ section.settings.btn1_hover_color }};
          }
       
         #section-{{ section.id }}.single_product_feature .banner-bg-content a.ban_btn1.banner_style_2{
           border: 1px solid {{ section.settings.btn1_border_color }};
           background: {{ section.settings.btn1_bg_color }};
           border-radius: {{ section.settings.button_border_radius }}px;
           padding:{{section.settings.button_padding_tb}}px {{section.settings.button_padding_lr}}px;

         }

        #section-{{ section.id }}.single_product_feature .banner-bg-content a.ban_btn1.banner_style_2:hover{
           background: {{ section.settings.btn1_bg_hover_color }};
           border: 1px solid {{ section.settings.btn1_border_hover_color }};
         } 
       
       
       
         {%- if section.settings.heading_bottom_border_line -%} 

           #section-{{ section.id }}.single_product_feature .banner-bg-content h2 {
              position: relative;
           }

           #section-{{ section.id }}.single_product_feature .banner-bg-content h2::before {
             position: absolute;
             content: "";
             background: {{ section.settings.heading_border_bottom_color }};
             height: 4px;
             width: 70px;
             bottom: -{{section.settings.border_top_spacing}}px;
           }

         {%- endif -%}
       


        {% endstyle %}

      {% endif %}





