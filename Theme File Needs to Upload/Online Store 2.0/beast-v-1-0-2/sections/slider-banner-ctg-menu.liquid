        height: {{section.settings.slider_height_1170}}px !important;
      }

    }  

    @media (min-width: 768px) and (max-width: 991px){
      #section-{{ section.id }}.slider-with-ctg-menu .single-slider {
        height: {{section.settings.slider_height_991}}px !important;
      }

    }


    @media (min-width: 576px) and (max-width: 767px){
      ##section-{{ section.id }}.slider-with-ctg-menu .single-slider {
        height: {{section.settings.slider_height_767}}px !important;
      }

    }


    @media (max-width: 575px){
      #section-{{ section.id }}.slider-with-ctg-menu .single-slider {
        height: {{section.settings.slider_height_575}}px !important;
      }

    }

    {%endif%}
    
    
    
    {%- if section.settings.nav_custom_style -%} 

    #section-{{ section.id }}.box-slider-wrapper .slider-area .nav-style-1.owl-carousel .owl-nav div, 
    #section-{{ section.id }}.box-slider-wrapper .slider-area .nav-style-2 .owl-nav div, 
    #section-{{ section.id }}.box-slider-wrapper .slider-area .nav-style-3 .owl-nav div {
      color: {{ section.settings.controlnav_color }};
      background-color: {{ section.settings.controlnav_bg_color }};
      border: 1px solid {{ section.settings.controlnav_border_color }};
    }
    #section-{{ section.id }}.box-slider-wrapper .slider-area .nav-style-1.owl-carousel .owl-nav div:hover, 
    #section-{{ section.id }}.box-slider-wrapper .slider-area .nav-style-2 .owl-nav div:hover, 
    #section-{{ section.id }}.box-slider-wrapper .slider-area .nav-style-3 .owl-nav div:hover {
      color: {{ section.settings.hover_controlnav_color }};
      background-color: {{ section.settings.hover_controlnav_bg_color }};
      border: 1px solid {{ section.settings.hover_controlnav_border_color }};
    }

    {%endif%}
    
  </style>







