<style>
  
  #section-{{ section.id }} .count_down_wrapper .single-countdown {
    background: {{ settings.body_bg_color }};
  }
  
  #section-{{ section.id }} .count_down_wrapper.count_border_disable .single-countdown {
    background: none;
    border:none;
    text-align:left;
    padding-left:0;
  }
  .count_down_wrapper.count_border_disable .count-number {
    margin-bottom: 10px;
  }
  
  #section-{{ section.id }} .promotion_video_btn{
    position: relative;
  }

  #section-{{ section.id }} .promotion_video_btn .magni_video_pop {
    position: absolute;
    left: 50%;
    top: 50%;
    height: 90px;
    width: 90px;
    border: 1px solid #fff;
    border-radius: 100%;
    text-align: center;
    line-height: 90px;
    font-size: 20px;
    background: #fff;
    color: {{ settings.color_primary }};
    transition: .3s;
    margin-left: -45px;
    margin-top: -45px;
  }
  #section-{{ section.id }} .promotion_video_btn .magni_video_pop:hover {
    transform: scale(1.15);
    background: transparent;
    color: {{ settings.color_primary }};
    border:1px solid {{ settings.color_primary }};
  }
  
  
  
  #section-{{ section.id }} .faq-page .card .card-header button {
    color: {{ settings.content_color }};
    transition: .3s;
  }
  #section-{{ section.id }} .faq-page .card .card-header button:hover {
    color: {{ settings.color_primary }};
  }
  #section-{{ section.id }} .faq-page .card-body p{
    color: {{ settings.content_color }};
  }
  #section-{{ section.id }} .card {
    background-color: {{ settings.body_bg_color }};
  }
  
</style>


{%- render 'section-style' -%}

{%- render 'heading-style' -%}



<script>
  $('.count_down_wrapper [data-countdown]').each(function() {
    var $this = $(this), finalDate = $(this).data('countdown');
    $this.countdown(finalDate, function(event) {
      $this.html(event.strftime('<div class="countdown-area"><div class="single-countdown"><div class="count-number">%D</div><div class="count-title">days</div></div><div class="single-countdown"><div class="count-number">%H</div><div class="count-title">Hour</div></div><div class="single-countdown"><div class="count-number">%M</div><div class="count-title">Mint</div></div><div class="single-countdown"><div class="count-number">%S</div><div class="count-title">Sec</div></div></div>'));
    });
  });
</script>



