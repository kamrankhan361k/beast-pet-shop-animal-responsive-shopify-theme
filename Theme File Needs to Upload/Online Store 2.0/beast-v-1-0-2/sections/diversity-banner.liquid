<div class="banner-area diversity-banner" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'full_width_full' %}fullwidth {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
 	<div class="row custom_margin_row">
      {%- for block in section.blocks -%}{%- case block.type -%}
      
      
      {%- when 'banner' -%}
      <div class="col-lg-{{ block.settings.ban_col }} col-md-{{ block.settings.ban_md_col }} col-sm-{{ block.settings.ban_sm_col }} col-12 block_{{ block.id }} custom_margin_col">
        
        
        <div class="single-banner mb-30 scroll-zoom">
          <a href="{{ block.settings.btn1_url }}">
            {%- if block.settings.img1 -%}
            <img class="animated" src="{{ block.settings.img1 | img_url: 'master' }}" alt="{{ image.alt }}">              
            {%- else -%}
            <img class="animated" src="https://via.placeholder.com/700x400" alt="{{ image.alt }}">
            {%- endif -%}
          </a>
          <div class="banner-common banner-content {{ block.settings.content_align }}">
            {%- if block.settings.t1 != '' -%}
            <h1>{{ block.settings.t1 }}</h1>
            {%- endif -%}

            {%- if block.settings.t2 != '' -%}
            <h2 class="multi_bottom" >{{ block.settings.t2 }}</h2>
            {%- endif -%}

            {%- if block.settings.btn1 != '' -%}
            <a class="ban_btn1 {{ block.settings.button_style }}"  href="{{ block.settings.btn1_url }}">{{ block.settings.btn1 }}</a>
            {%- endif -%}
          </div>
        </div>
        
        
                  
        {% if block.settings.banner_custom_color %}
          {% style %}

        .block_{{ block.id }} .single-banner .banner-common a.ban_btn1{
        	color: {{ block.settings.btn1_color }};
        }
        .block_{{ block.id }} .single-banner .banner-common a.ban_btn1:hover{
        	color: {{ block.settings.btn1_hover_color }};
        }  

        .block_{{ block.id }} .single-banner .banner-common a.ban_btn1.banner_style_2{
        	border: 1px solid {{ block.settings.btn1_border_color }};
        	background: {{ block.settings.btn1_bg_color }};
        	border-radius: {{ block.settings.button_border_radius }}px;
        }

        .block_{{ block.id }} .single-banner .banner-common a.ban_btn1.banner_style_2:hover{
       	 	background: {{ block.settings.btn1_bg_hover_color }};
       		border: 1px solid {{ block.settings.btn1_border_hover_color }};
        } 
        

        
          .banner-area .block_{{ block.id }} .single-banner .banner-common h1{
              color: {{ block.settings.t1_color }};
          }
          .banner-area .block_{{ block.id }} .single-banner .banner-common h2{
              color: {{ block.settings.t2_color }};
          }
          .diversity-banner .block_{{ block.id }} .single-banner .banner-common {
              left: {{ block.settings.content_left_right_position }}%;
              top: {{ block.settings.content_top_bottom_position }}%;
          }
        
        
          {%- assign top_title = block.settings.top_title -%}
          {%- assign bottom_title = block.settings.bottom_title -%}
          {%- assign button_title = block.settings.button_title -%}

          {{ top_title | font_face }}
          {{ bottom_title | font_face }}
          {{ button_title | font_face }}

          .banner-area .block_{{ block.id }} .single-banner .banner-common h1{
            font-family: {{ top_title.family }}, {{ top_title.fallback_families }};
            font-style: {{ top_title.style }};
            font-weight: {{ top_title.weight }};
            font-size:{{ block.settings.top_title_font_size }}px;
            line-height:{{ block.settings.top_title_font_lineheight }}px;
            margin: 0 0 {{ block.settings.top_title_margin }}px;
          }

          .banner-area .block_{{ block.id }} .single-banner .banner-common h2 {
            font-family: {{ bottom_title.family }}, {{ bottom_title.fallback_families }};
            font-style: {{ bottom_title.style }};
            font-weight: {{ bottom_title.weight }};
            font-size:{{ block.settings.bottom_title_font_size }}px;
            line-height:{{ block.settings.bottom_title_font_lineheight }}px;
            margin: 0 0 {{ block.settings.bottom_title_margin }}px;
          }

          .block_{{ block.id }} .single-banner .banner-common a.ban_btn1 {
            font-family: {{ button_title.family }}, {{ button_title.fallback_families }};
            font-style: {{ button_title.style }};
            font-weight: {{ button_title.weight }};
            font-size:{{ block.settings.button_title_font_size }}px;
            margin: {{ block.settings.button_title_margin }}px 0 0;
          }
        
        
        
        
          @media (min-width: 768px) and (max-width: 1200px) {
        
            .banner-area .block_{{ block.id }} .single-banner .banner-common h1{
              	font-size:{{ block.settings.top_title_font_size_md }}px;
              	line-height:{{ block.settings.top_title_font_lineheight_md }}px;
            }
            .banner-area .block_{{ block.id }} .single-banner .banner-common h2 {
            	font-size:{{ block.settings.bottom_title_font_size_md }}px;
            	line-height:{{ block.settings.bottom_title_font_lineheight_md }}px;
            }
        
          }

          @media (min-width: 300px) and (max-width: 767px) {    

           .banner-area .block_{{ block.id }} .single-banner .banner-common h1{
              	font-size:{{ block.settings.top_title_font_size_sm }}px;
              	line-height:{{ block.settings.top_title_font_lineheight_sm }}px;
            }
            .banner-area .block_{{ block.id }} .single-banner .banner-common h2 {
            	font-size:{{ block.settings.bottom_title_font_size_sm }}px;
            	line-height:{{ block.settings.bottom_title_font_lineheight_sm }}px;
            }

          }
        
        
        
       	{% endstyle %}
        {% endif %}
        
        
      </div>
      {%- endcase -%}
      {%- endfor -%}
      
      
    </div>
  </div>
</div>


